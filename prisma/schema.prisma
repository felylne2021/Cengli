// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Chain {
  chainId        Int    @id
  chainName      String
  rpcUrl         String
  nativeCurrency Json
  blockExplorer  String
  logoURI        String

  tokens Token[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  address String
  chainId Int

  name     String
  symbol   String
  decimals Int
  logoURI  String
  priceUsd Float

  chain        Chain         @relation(fields: [chainId], references: [chainId], onDelete: Cascade)
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([address, chainId])
}

model Transaction {
  id String @id @default(uuid())

  fromUserId         String
  destinationUserId  String
  fromAddress        String
  destinationAddress String

  chainId      Int
  tokenAddress String
  amount       Float

  note String?

  token Token @relation(fields: [tokenAddress, chainId], references: [address, chainId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
